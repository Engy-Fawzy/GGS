<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f9fbe7"
            tools:context=".MainActivity"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:context=".MainActivity">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Coral Sea Aqua Club Resort:"
                    android:textSize="30sp"
                    android:paddingBottom="13dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="300dp"
                    android:layout_marginTop="16dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/a"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:paddingLeft="15dp"
                    android:textSize="25sp"
                    android:text="يقع Coral Sea Aqua Club Resort في شرم الشيخ، ويوفر مكان إقامة مع مركز للياقة البدنية وحديقة وتراس، كما يبعد مكان الإقامة ...."
                    android:textColor="@android:color/holo_red_dark"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:paddingBottom="20dp"
                    android:text="see more"
                    android:id="@+id/Hotel1"
                    android:onClick="openhotel1"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp"
                    android:paddingBottom="3dp"
                    android:text="Xperience Golden Sandy Beach:"
                    android:textSize="30sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="300dp"
                    android:layout_marginTop="16dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/b" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:paddingLeft="15dp"
                    android:text="يقع إكسبيريانس غولدن ساندي بيتش في مدينة شرم الشيخ، ويتميز بمنطقة شاطئ خاص وحديقة. ويقع مكان الإقامة على خليج شرم الماي ...."
                    android:textColor="@android:color/holo_blue_dark"
                    android:textSize="25sp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:id="@+id/Hotel2"
                    android:onClick="openhotel2"
                    android:text="see more"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":نوفوتيل شرم الشيخ"
                    android:paddingTop="20dp"
                    android:textSize="30sp"
                    android:paddingBottom="13dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="300dp"
                    android:layout_marginTop="16dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/c" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:paddingLeft="15dp"
                    android:text="يقع هذا الفندق في خليج نعمة بشرم الشيخ. ويضم الفندق شاطئًا خاصًا و5 مسابح، ويحتوي على غرف مُكيفة مُزوَّدة بتلفزيون مع قنوات فضائية .... "
                    android:textColor="#388e3c"
                    android:textSize="25sp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Hotel3"
                    android:onClick="openhotel3"
                    android:padding="20dp"
                    android:text="SEE MORE"
                    android:textSize="20sp" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/back"
                    android:textSize="30sp"
                    android:text="Back"
                    android:onClick="back"/>


            </LinearLayout>
        </RelativeLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
